{
  "typeAcquisition": {
    "include": ["jest"]
  },
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "rootDir": "src/",
    "outDir": "dist/",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "types/main.d.ts"
  ],
  "include": ["types/*.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
