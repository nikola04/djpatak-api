{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "paths": {
      "*": [
        "./node_modules/*"
      ],
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["types/**/*.ts", "src/*", "**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"] 
}
