{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "paths": {
      "*": [
        "./node_modules/*"
      ],
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "types/main.d.ts",
    "server.ts"
  ],
  "include": ["./types/*.ts", "src/*", "**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"] 
}
